# Fonts
# 19 is pretty much 20 with less height.
font-size = 19
font-family = "CaskaydiaCove Nerd Font Mono"
font-thicken = true
font-feature = -calt
font-feature = -clig
font-feature = -liga

# Text-related
adjust-cell-width = 0
adjust-cell-height = 0
bold-is-bright = true

# Input-related
cursor-style = block
adjust-cursor-thickness = 1
cursor-invert-fg-bg = true
macos-option-as-alt = true
mouse-hide-while-typing = true

# Ghostty-related
auto-update = check
auto-update-channel = stable
quit-after-last-window-closed = true

shell-integration = zsh
shell-integration-features = cursor,title

# Theme
theme = rose-pine-moon
unfocused-split-opacity = 0.95

# Icon
macos-icon = custom-style
macos-icon-frame = plastic

# Window
background-opacity = 0.9
background-blur = true
macos-titlebar-proxy-icon = visible
macos-titlebar-style = tabs
window-decoration = true
window-height = 24
window-width = 80

# Padding
window-padding-x = 5
window-padding-y = 5
window-padding-color = background

# Keybinds
# Config-related
keybind = cmd+r=reload_config

# Splits
keybind = ctrl+shift+physical:\=new_split:right
keybind = ctrl+shift+enter=new_split:down

# Split Navigation
keybind = ctrl+shift+physical:h=goto_split:left
keybind = ctrl+shift+physical:j=goto_split:bottom
keybind = ctrl+shift+physical:k=goto_split:top
keybind = ctrl+shift+physical:l=goto_split:right

# Split Resizing
keybind = cmd+alt+left=resize_split:left,20
keybind = cmd+alt+down=resize_split:down,20
keybind = cmd+alt+up=resize_split:up,20
keybind = cmd+alt+right=resize_split:right,20

# Other split actions
keybind = ctrl+shift+physical:e=equalize_splits
keybind = ctrl+shift+physical:w=close_surface
