export XDG_CONFIG_HOME="$HOME/.config"
export K9S_CONFIG_DIR="$XDG_CONFIG_HOME/k9s"

# User configuration
export CLICOLOR=1

# If you come from bash you might have to change your $PATH.
export PATH=$PATH:$(go env GOPATH)/bin
export PATH=$PATH:$HOME/.local/bin
export PATH=$PATH:$HOME/bin

alias vi="nvim"
alias ovi="NVIM_APPNAME=nvim.old nvim"
alias lg="lazygit"
alias fix_gpg="gpgconf --kill gpg-agent"
alias ktx="kubectx"
alias kns="kubens"
alias k="kubectl"

chezadd() { chezmoi forget $1 && chezmoi add $1 }

eval "$(zoxide init zsh)"
eval "$(starship init zsh)"
eval "$(luarocks path --lua-version=5.1)"
source ~/.zshrc_local
